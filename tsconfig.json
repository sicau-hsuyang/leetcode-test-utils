{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src"]
}
